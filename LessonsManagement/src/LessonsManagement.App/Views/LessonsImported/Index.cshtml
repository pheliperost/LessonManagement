@using LessonsManagement.App.Extensions
@model IEnumerable<LessonsManagement.App.ViewModels.LessonImportedViewModel>

@{
    ViewData["Title"] = "Imported Lessons";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-hover">
    <thead class="table-dark">
        <tr>
            <th>
                Event Type
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student.StudentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FileImported.FileDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExecutionDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EventType.EventTypeName)
                </td>
                <td>
                    @this.FormatStudentName(item.Student)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FileImported.FileDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExecutionDate)
                </td>
            </tr>
        }
    </tbody>
</table>
