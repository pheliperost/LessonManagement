@model LessonsManagement.App.ViewModels.LessonViewModel
@{
    ViewData["Title"] = "Lesson Details";
}

<div class="modal-header">
    <h4 class="modal-title">@ViewData["Title"]</h4>
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">×</span><span class="sr-only">Fechar</span>
    </button>
</div>

<form asp-action="ModalDetails" >
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <dl>
                    <dt>
                        @Html.DisplayNameFor(model => model.EventType.EventTypeName)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.EventType.EventTypeName)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Student.StudentName)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Student.StudentName)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.ExecutionDate)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.ExecutionDate)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Notes)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Notes)
                    </dd>
                </dl>
            </div>

            <div class="modal-footer">
                <div class="col-md-offset-2 col-md-10">
                    <a class="btn btn-dark" asp-controller="Lessons" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    <a class="btn btn-info" href="javascript:window.history.back();">Back</a>
                    <input type="button" class="btn btn-info" value="Fechar" data-dismiss="modal" />
                </div>
            </div>
        </div>
    </div>
</form>
