@model IEnumerable<LessonsManagement.App.ViewModels.FileImportedViewModel>

@{
    ViewData["Title"] = "Files Imported";
}

<h1>@ViewData["Title"]</h1>

<vc:Summary></vc:Summary>

<p>
    <a class="btn btn-info" asp-action="Create">Upload new file</a>
</p>
<table class="table table-hover">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FileDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FileDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td class="text-right">
                    <a class="btn btn-info" asp-action="Conciliation" asp-route-id="@item.Id"><spam class="fas fa-handshake"></spam></a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><spam class="fa fa-trash"></spam></a>
                </td>
            </tr>
        }
    </tbody>
</table>
